<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/re_main_card_view"
        app:cardElevation="2dp"

        app:cardPreventCornerOverlap="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1BA6CE65">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="120dp"
                android:layout_height="115dp"
                android:src="@drawable/nose"
                app:shapeAppearanceOverlay="@style/ractangle"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
                android:id="@+id/re_card_view_img"
                />

            <TextView
                android:id="@+id/re_name_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nose_e"
                android:textSize="18sp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/re_name_hindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nose_h"

                android:textSize="18sp"
                android:layout_gravity="center"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>